#include <stdio.h>

int factorial(int num) {
    if (num == 1 || num == 0) { // Function checks until value is 1 or 0
        return 1;
    } else {
        return num * factorial(num - 1); // Function calls itself and decreases the value until the desired value
    }
}

int main() {
    int num; // Variable declaration

    printf("Enter a positive number\n");

    scanf("%d", &num); // Take the value for factorial

    printf("Factorial is %d\n", factorial(num)); // Function called using recursion and print the output

    return 0;
}
