#include &lt;stdio.h&gt;// header file
int main(){// main function
int side_1 ,side_2 ,side_3;//declare variable (side_1 ,side_2 ,side_3)
printf(&quot;enter side 1 &quot;);//print enter side 1
scanf(&quot;%d&quot;,&amp;side_1);// take value from the user of side 1

printf(&quot;enter side 2 &quot;);//print enter side 2
scanf(&quot;%d&quot;,&amp;side_2);// take value from the user of side 2

printf(&quot;enter side 3 &quot;);//print enter side 3
scanf(&quot;%d&quot;,&amp;side_3);// take value from the user of side 3

if(side_1 == side_2 &amp;&amp; side_1 == side_3){//if side_1 is equal to side_2 and side_1 is also equal to side_3
printf(&quot;It is a equilateral triangle&quot;);// then print it is a equilateral triangle
}else if(side_1 == side_2 || side_1 == side_3){// else if side_1 is equal to side_2 or side_1 is equal to
side_3
printf(&quot;It is a isoceles triangle&quot;);// then print it is a isoceles triangle
}else{
printf(&quot;it is a scalene triangle&quot;);//else print is is a scalene triangle
}

return 0;//end
}
