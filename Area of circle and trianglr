#include <stdio.h>
int main() {
float breath , height , radius;//declaring variable
printf("Enter breath: ");
scanf("%f",&breath);//take value of variable from the user of breath

printf("Enter height: ");
scanf("%f",&height);//take value of variable from the user of height

printf("Enter radius: ");
scanf("%f",&radius);//take value of variable from the user of radius

printf("The area of circle :%.2f\n",3.14 * (radius * radius));//use formula of area of circle and print the result
printf("the area of triangle :%.2f",0.5 * (breath * height));//use formula of area of triangle and print the result

return 0;
}
