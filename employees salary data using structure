#include <stdio.h>
#include <string.h>

struct salarys {
    char name[20];
    int employ_id;
    char Department[20];
    float hour;
    float wage;
    float salary;
};

int main() {
    int num, number, i;
    printf("Enter the number of Employees: ");
    scanf("%d", &number);

    struct salarys salary[number]; // Allocate array for 'number' employees

    while (1) {
        printf("Enter 1 for input name of the employee\n");
        printf("Enter 2 for input employee id\n");
        printf("Enter 3 for input number of hours\n");
        printf("Enter 4 for input wage per hour\n");
        printf("Enter 5 for total salary\n");
        printf("Enter 6 for department name\n");
        printf("Enter 7 to exit the program\n");
        printf("Enter 8 for full result\n");
        printf("Enter a number from the given menu: ");
        scanf("%d", &num);

        switch (num) {
            case 1:
                for (i = 0; i < number; i++) {
                    printf("Enter name of Employee %d: ", i + 1);
                    scanf("%s", salary[i].name);
                }
                break;

            case 2:
                for (i = 0; i < number; i++) {
                    printf("Enter id for Employee %d: ", i + 1);
                    scanf("%d", &salary[i].employ_id);
                }
                break;

            case 3:
                for (i = 0; i < number; i++) {
                    printf("Enter wage per hour for Employee %d: ", i + 1);
                    scanf("%f", &salary[i].wage);
                }
                break;

            case 4:
                for (i = 0; i < number; i++) {
                    printf("Enter number of hours for Employee %d: ", i + 1);
                    scanf("%f", &salary[i].hour);
                }
                break;

            case 5:
                for (i = 0; i < number; i++) {
                    salary[i].salary = salary[i].wage * salary[i].hour;
                    printf("Total salary for Employee %d is %.2f\n", i + 1, salary[i].salary);
                }
                break;

            case 6:
                for (i = 0; i < number; i++) {
                    printf("Enter Department name for Employee %d: ", i + 1);
                    scanf("%s", salary[i].Department);
                }
                break;

            case 7:
                return 0;

            case 8:
                for (i = 0; i < number; i++) {
                    printf("Name of Employee %d: %s\n", i + 1, salary[i].name);
                    printf("ID of Employee %d: %d\n", i + 1, salary[i].employ_id);
                    printf("Department of Employee %d: %s\n", i + 1, salary[i].Department);
                    printf("Hours worked by Employee %d: %.2f\n", i + 1, salary[i].hour);
                    printf("Wage per hour for Employee %d: %.2f\n", i + 1, salary[i].wage);
                    printf("Total salary for Employee %d: %.2f\n", i + 1, salary[i].salary);
                }
                break;

            default:
                printf("Invalid option. Please enter a number from the menu.\n");
                break;
        }
    }

    return 0;
}
